{
    "version": 2,
    "projects": [
      {
        "name": "dynamic-one-page-website",
        "alias": "dynamic-one-page-website.vercel.app",
        "builds": [
          {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "./frontend/build"
            }
          },
          {
            "src": "server.js",
            "use": "@vercel/node"
          }
        ],
        "routes": [
          {
            "src": "/api/(.*)",
            "dest": "backend/$1"
          },
          {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
          }
        ]
      }
    ],
    "build": {
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
  